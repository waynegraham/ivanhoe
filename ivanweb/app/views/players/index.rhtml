<h2>Admin</h2>

<table id="game-list">
  <tr>
  </tr>
  
<% for player in @players %>
  <tr>
    <td><%= link_to player.playername, player_path(player) %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Remove', player_path(player), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

